{
  "manifest_version": 3,
  "name": "Bstation+",
  "version": "1.0",
  "description": "Enhance your anime watching experience on bstation",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.svg"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.bilibili.tv/*"],
  "content_scripts": [
    {
      "matches": ["https://*.bilibili.tv/*"],
      "js": ["background.js"]
    }
  ]
}
